@model RolViewModel

@{
    ViewData["Title"] = "Crear Roles de Usuario";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="RolAdd" asp-controller="Rol">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Name" placeholder="Nombre del Rol">
        <label asp-for="Name">Nombre del Rol</label>
    </div>

    <button class="btn btn-outline-primary">Guardar</button>
    <a class="btn btn-outline-secundary" asp-action="RolList" asp-controller="Rol">Regresar</a>
</form>
