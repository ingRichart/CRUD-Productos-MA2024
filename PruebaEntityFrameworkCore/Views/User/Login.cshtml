@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Acceso al sistema</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Login" asp-controller="User">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" autocomplete="off" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" ></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" ></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Remember">
                <label class="form-check-label" asp-for="Remember"></Label>
            </div>


            <button class="btn btn-primary">Login</button>
            <a class="btn btn-success" asp-action="Registry" asp-controller="User">Crear una nueva cuenta</a>

        </form>
    <div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}