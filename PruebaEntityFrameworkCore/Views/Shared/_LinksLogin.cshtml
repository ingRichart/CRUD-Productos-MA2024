@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager


<div class="dropdown text-end">
    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown"
        aria-expanded="false">
        <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
    </a>
    <ul class="dropdown-menu text-medium">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="dropdown-item">Hola, @User.Identity.Name</li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li class="dropdown-item" >
                    <form asp-action="ChangePassword" asp-controller="User">
                        <button type="submit" class="nav-link btn btn-link text-dark">
                            Password
                        </button>
                    </form>
                </li>
                @* <li>
                    <hr class="dropdown-divider">
                </li> *@
                <li class="dropdown-item">
                    <form asp-action="Logout" asp-controller="User">
                        <button type="submit" class="nav-link btn btn-link text-dark">
                            Salir
                        </button>
                    </form>
                </li>
                @* <li class="nav-item">
                    <form class="form-inline" >
                        <button type="submit" class="nav-link btn btn-link text-dark">
                            Salir
                        </button>
                    </form>
                </li> *@
            }
            else
            {
                <li>
                    <a class="dropdown-item" asp-controller="User" asp-action="Registry">
                        Registro
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="User" asp-action="Login">
                        Entrar
                    </a>
                </li>
            }
    </ul>
</div>

<ul class="navbar-nav">
    
</ul>